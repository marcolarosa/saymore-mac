{
  "name": "saymore-light",
  "productName": "SayMore Light",
  "version": "0.10.0",
  "description": "File & metadata organization for language documentation projects.",
  "main": "./main.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test node --trace-warnings ./test/runTests.js",
    "test-all": "npm run test && npm run build && npm run test-e2e",
    "test-watch": "npm test -- --watch",
    "testw": "cross-env NODE_ENV=test node --trace-warnings ./test/runTestsWatch.js",
    "test-e2e": "cross-env NODE_ENV=test node --trace-warnings ./test/runTests.js e2e",
    "watch": "yarn webpack --watch --config webpack.config.electron.js",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "build-main": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./app/main.development",
    "start-hot-vscode": "cross-env HOT=1 NODE_ENV=development electron --remote-debugging-port=9223 ./app/main.development",
    "postinstall": "npm run build",
    "dev": "npm run hot-server -- --start-hot",
    "dev-vscode": "npm run hot-server -- --start-hot-vscode",
    "package": "npm run build && build --publish never",
    "package-win": "npm run build && build --win --x64",
    "package-linux": "npm run build && build --linux",
    "package-all": "npm run build && build -mwl",
    "cleanup": "mop -v",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "xml"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.xml$": "jest-raw-loader"
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ]
  },
  "build": {
    "productName": "SayMore Light",
    "appId": "io.github.sillsdev.sayless",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.js",
      "main.js.map",
      "package.json"
    ],
    "extraResources": [
      "artwork/"
    ],
    "extraFiles": [
      "sample data/"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/windows.ico"
    },
    "mac": {
      "icon": "build/mac.icns"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/enzyme": "^3.1.1",
    "@types/history": "^4.5.2",
    "@types/jest": "^22.2.2",
    "@types/node": "^8.0.2",
    "@types/react": "^16.0.5",
    "@types/react-dom": "16.0.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/sinon": "^2.3.1",
    "asar": "^0.13.0",
    "babel-jest": "^22.4.1",
    "boiler-room-custodian": "^0.6.2",
    "chai": "^4.1.2",
    "chai-webdriverio": "^0.4.3",
    "concurrently": "^3.1.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.4",
    "css-modules-require-hook": "^4.0.6",
    "devtron": "^1.4.0",
    "electron": "2.0.0",
    "electron-builder": "^19.8.0",
    "electron-builder-http": "^19.15.0",
    "electron-devtools-installer": "2.2.4",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.2",
    "jest-raw-loader": "^1.0.1",
    "json-loader": "^0.5.4",
    "markdown-loader": "^2.0.1",
    "node-sass": "^4.1.1",
    "react-hot-loader": "^4.0.1",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.0.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.19.0",
    "ts-jest": "^22.4.1",
    "ts-loader": "4.0.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.7.2",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-merge": "^2.0.0",
    "xmldom": "^0.1.27",
    "xpath": "^0.0.27"
  },
  "dependencies": {
    "@blueprintjs/core": "^1.32.0",
    "@blueprintjs/datetime": "^1.23.0",
    "@types/archiver": "^2.1.1",
    "@types/camelcase": "^4.1.0",
    "@types/commonmark": "^0.27.0",
    "@types/electron-store": "^1.2.0",
    "@types/filesize": "^3.2.15",
    "@types/fs-extra": "^5.0.0",
    "@types/glob": "^5.0.33",
    "@types/image-size": "^0.0.29",
    "@types/moment": "^2.13.0",
    "@types/musicmetadata": "^2.0.4",
    "@types/ncp": "^2.0.1",
    "@types/prop-types": "^15.5.2",
    "@types/react-datepicker": "^0.55.1",
    "@types/react-dropzone": "4.1",
    "@types/react-modal": "^3.1.1",
    "@types/react-select": "^1.0.60",
    "@types/react-table": "^6.7.0",
    "@types/react-tabs": "^1.0.3",
    "@types/sanitize-filename": "^1.1.28",
    "@types/temp": "^0.8.31",
    "@types/webdriverio": "^4.10.0",
    "@types/xml2js": "^0.4.2",
    "@types/xmlbuilder": "^0.0.32",
    "archiver": "^2.1.1",
    "bourbon": "^4.3.4",
    "camelcase": "^4.1.0",
    "commonmark": "^0.28.1",
    "electron-context-menu": "^0.9.1",
    "electron-debug": "^1.1.0",
    "electron-store": "^1.3.0",
    "filesize": "^3.5.11",
